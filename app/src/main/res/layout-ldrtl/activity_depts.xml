<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Depts"
    android:background="@color/white"
    android:layout_gravity="center_horizontal"
    >
    <com.example.lectuers.text_font1
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/red1"
    android:textColor="@color/white"
    android:textSize="25sp"
    android:text="@string/level_name"
    android:gravity="center"
    android:id="@+id/layout_name"
 />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/liner_name"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/layout_name"
        android:gravity="center"
        tools:ignore="NotSibling">
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/red2"
            app:cardCornerRadius="4dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >

            <com.example.lectuers.text_font1
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/band1_name"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:onClick="dept1"

                tools:ignore="OnClick" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/red2"
            app:cardCornerRadius="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >
            <com.example.lectuers.text_font1
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/band2_name"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:onClick="dept2"

                tools:ignore="OnClick" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/liner_name1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/liner_name"
        android:gravity="center"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/red2"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="4dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >
            <com.example.lectuers.text_font1
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/band3_name"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:onClick="dept3"
                />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/red2"
            app:cardCornerRadius="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >
            <com.example.lectuers.text_font1
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/band4_name"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                  android:onClick="dept4"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/liner_name2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/liner_name1"
        android:gravity="center"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/red2"
            app:cardCornerRadius="4dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >
            <com.example.lectuers.text_font1
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/band5_name"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
              android:onClick="dept5"
                />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/red2"
            app:cardCornerRadius="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >
            <com.example.lectuers.text_font1
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/band6_name"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                   android:onClick="dept6"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>